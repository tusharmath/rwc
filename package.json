{
  "name": "rwc",
  "description": "create reactive webcomponents",
  "author": {
    "name": "Tushar Mathur <tusharmath@gmail.com>",
    "url": "http://tusharm.com"
  },
  "scripts": {
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tusharmath/rwc.git"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "main": "./src/index.js",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    }
  },
  "keywords": [
    "redux",
    "react",
    "reactive",
    "web-components",
    "virtual-dom",
    "shadow-dom"
  ],
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "cz-conventional-changelog": "^2.0.0",
    "ghooks": "^2.0.0",
    "jsdom": "^11.2.0",
    "mocha": "^3.2.0",
    "semantic-release": "^6.3.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "validate-commit-msg": "^2.8.0"
  },
  "dependencies": {
    "ts-mocha": "^1.0.3"
  }
}
