{
  "name": "rwc",
  "description": "create reactive webcomponents",
  "author": {
    "name": "Tushar Mathur <tusharmath@gmail.com>",
    "url": "http://tusharm.com"
  },
  "scripts": {
    "prepublish": "tsc -d",
    "lint": "tslint ./src/*.ts ./src/**/*.ts",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "tsc && mocha -r src/TestSetup.js",
    "test:watch": "tsc && mocha -r src/TestSetup.js -w"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tusharmath/rwc.git"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "main": "./src/index.js",
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    }
  },
  "keywords": [
    "redux",
    "react",
    "reactive",
    "web-components",
    "virtual-dom",
    "shadow-dom"
  ],
  "devDependencies": {
    "cz-conventional-changelog": "^2.0.0",
    "ghooks": "^2.0.0",
    "mocha": "^6.2.2",
    "semantic-release": "^6.3.2",
    "tslint": "^5.1.0",
    "typescript": "^2.0.3",
    "validate-commit-msg": "^2.8.0"
  },
  "dependencies": {
    "hoe": "^6.0.0"
  }
}
